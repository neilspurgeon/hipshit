<h1>Manage Posts</h1>

<% @posts.each do |p| %>
  <div class="admin-list-item">
    <%= image_tag p.image.url("square"), class: "admin-list-item__image" %>
    <div class="admin-list-item__details">
      <h2><%= p.product %></h2>
      <h3><%= p.brand %></h3>
    </div>

    <div class="admin-list-item__actions">
      <%= button_to "Edit", edit_admin_post_path(p), method: :get %>
      <%= button_to "Delete", admin_post_path(p.id), method: :delete %>
    </div>
  </div>
<% end %>

<%= will_paginate @posts %>